<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_bianma"
        style="@style/style_14p_brown"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="3.0"
        android:layout_height="60dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="@dimen/dp_0"
        android:layout_weight="0.01"
        android:layout_height="60dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/tv_leve_sum"
        style="@style/style_14p_brown"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="3.0"
        android:layout_height="60dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="@dimen/dp_0"
        android:layout_weight="0.01"
        android:layout_height="60dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/tv_leve"
        style="@style/style_14p_brown"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="3.0"
        android:layout_height="60dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="@dimen/dp_0"
        android:layout_weight="0.01"
        android:layout_height="60dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/tv_risk_content"
        style="@style/style_14p_brown"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="3.0"
        android:layout_height="60dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="@dimen/dp_0"
        android:layout_weight="0.01"
        android:layout_height="60dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/tv_risk_time"
        style="@style/style_14p_brown"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="3.0"
        android:layout_height="60dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="@dimen/dp_0"
        android:layout_weight="0.01"
        android:layout_height="60dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/ll_do"
        style="@style/style_14p_brown"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="3.0"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_sure"
            android:text="审核报告"
            android:textSize="@dimen/sp_6"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>

